        <Button Content="Х/О" Grid.Column="1" HorizontalAlignment="Center" Height="57" Grid.Row="5" VerticalAlignment="Center" Width="188" Background="#FF1B1919" Foreground="#FFB240B7" FontSize="30" Click="Button_Click_2"/>
